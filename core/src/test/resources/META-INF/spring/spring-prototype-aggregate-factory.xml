<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean class="org.axonframework.eventsourcing.SpringPrototypeAggregateFactory">
        <property name="prototypeBeanName" value="stubAggregate"/>
    </bean>

    <bean id="stubAggregate" class="org.axonframework.eventsourcing.SpringWiredAggregate" init-method="initialize"
            scope="prototype">
        <property name="springConfiguredName" value="it's here"/>
    </bean>

</beans>
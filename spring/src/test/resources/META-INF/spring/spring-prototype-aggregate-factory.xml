<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean class="org.axonframework.spring.eventsourcing.SpringPrototypeAggregateFactory">
        <constructor-arg value="stubAggregate"/>
    </bean>

    <bean id="stubAggregate" class="org.axonframework.spring.domain.SpringWiredAggregate" init-method="initialize"
            scope="prototype">
        <property name="springConfiguredName" value="it's here"/>
    </bean>

</beans>
